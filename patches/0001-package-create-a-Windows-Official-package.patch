+++ b/appveyor.yml
@@ -42,9 +42,16 @@ environment:
     - arch: x86_64
       bits: 64
       doing: deploy
-      test: yes
+      test: package
       location: cygwin64
 
+    # CygWin 64bits build
+    - arch: x86
+      bits: 32
+      doing: deploy
+      test: package
+      location: cygwin
+
